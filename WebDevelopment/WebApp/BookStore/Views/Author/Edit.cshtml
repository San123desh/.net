@model Author
<h4 class="text-center">Edit Author Registration</h4>
<form action="/author/edit" method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input asp-for="Name" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Address" class="form-label">Address</label>
    <input asp-for="Address" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" type="email" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Gender" class="form-label">Gender</label>
    @* <input asp-for="Gender" type="text" class="form-control"> *@
    <label asp-for="Gender" class="form-label">Gender</label>
    @* <input asp-for="Gender" type="text" class="form-control"> *@
    <select class="form-select" asp-for="Gender">
      <option value="0">Select Gender</option>
      @foreach (var g in Enum.GetValues<Gender>())
      {
        <option value="@g">@g</option>

      }
    </select>
  </div>
  <div class="mb-3">
    <label asp-for="Dob" class="form-label">Dob</label>
    <input asp-for="Dob" type="date" class="form-control">
  </div>

  @* This will be used to identify the specific author to update *@
  <input type="hidden" asp-for="Id" />

  <button type="submit" class="btn btn-primary">Save Update</button>
</form>