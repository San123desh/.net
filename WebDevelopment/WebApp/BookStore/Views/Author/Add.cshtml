@* @using BookStore.Data.Models; *@

@model Author
<h4 class="text-center">Add New Author Registration</h4>
<form action="/author/add" method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Address" class="form-label"></label>
    <input asp-for="Address" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" type="email" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Gender" class="form-label">Gender</label>
    @* <input asp-for="Gender" type="text" class="form-control"> *@
    <select class="form-select" asp-for="Gender">
      <option value="0">Select Gender</option>
      @foreach (var g in Enum.GetValues<Gender>())
      {
        <option value="@g">@g</option>

      }
    </select>
  </div>
  <div class="mb-3">
    <label asp-for="Dob" class="form-label">DOB</label>
    <input asp-for="Dob" type="date" class="form-control">
  </div>
  <input type="hidden" asp-for="Id" />

  <button type="submit" class="btn btn-primary">Save Author</button>
</form>